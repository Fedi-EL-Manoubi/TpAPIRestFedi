{% extends 'base.html.twig' %}

{% block title %}Listes des Départements par Région{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <form action="" method="GET">
            <div class="row">
                <div class="col-md-10">
                    <div class="form-group">
                  
                        <label for="departement">Sélectionnez une Régions  :</label>
                        <select class="form-control text-dark bg-light" name="region" id="region" style="height: 50px;">
                            <option value="Toutes">Tous les régions</option>
                            {% for maRegion in mesRegions %}
                                <option value="{{ maRegion.code }}" {% if app.request.query.get("region") == maRegion.code %} selected {% endif %}>
                                    {{ maRegion.nom }}
                                </option>
                            {% endfor %}
                        </select>
                    </div>
                </div>
                <div class="col-md-2">
                <br>
                    <button type="submit" class="btn btn-primary" style="height: 75px;">Filtrer</button>
                </div>
            </div>
        </form>
    </div>
</div>

<br>
<br>


        <h1>Liste des Départements</h1>
<br>
      

        <div class="row">
            {% for monDep in mesDeps %}
                <div class="col-md-3">
                    <div class="card text-white bg-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">{{ monDep.code }}</div>
                        <div class="card-body">
                            <h4 class="card-title">{{ monDep.nom }}</h4>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>


{% endblock %}
